#!/bin/bash
# Service wrapper script for calendar sync daemon management

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Change to project root directory
cd "$PROJECT_ROOT"

# Run the calendar sync daemon CLI with all arguments passed through
python -m cal.cli.sync_daemon "$@"
